{
    "name": "joomla/console",
    "type": "joomla-package",
    "description": "Joomla Console Package",
    "keywords": ["joomla", "framework", "console"],
    "homepage": "https://github.com/joomla-framework/console",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1.0",
        "joomla/application": "^3.0",
        "joomla/event": "^3.0",
        "joomla/string": "^3.0",
        "symfony/console": "^v6.2.0",
        "symfony/error-handler": "^6"
    },
    "require-dev": {
        "joomla/test": "^3.0",
        "phpunit/phpunit": "^9.5.28",
        "psr/container": "^1.0",
        "squizlabs/php_codesniffer": "~3.7.2",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phan/phan": "^5.4.2"
    },
    "suggest": {
        "psr/container-implementation": "To use the ContainerLoader"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Console\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev",
            "dev-3.x-dev": "3.0-dev"
        }
    }
}
